<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wesleyruede.rest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/rest_logo_update_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/rest_logo_update_1"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".ui.daysoftheweek.SundayActivity" android:noHistory="true"/>
        <activity android:name=".ui.daysoftheweek.SaturdayActivity" android:noHistory="true"/>
        <activity android:name=".ui.daysoftheweek.FridayActivity" android:noHistory="true"/>
        <activity android:name=".ui.daysoftheweek.ThursdayActivity" android:noHistory="true"/>
        <activity android:name=".ui.daysoftheweek.WednesdayActivity" android:noHistory="true"/>
        <activity android:name=".ui.daysoftheweek.TuesdayActivity" android:noHistory="true"/>
        <activity android:name=".ui.daysoftheweek.MondayActivity" android:noHistory="true"/>
        <activity android:name=".ui.ScheduleActivity" android:noHistory="true"/>
        <activity android:name=".MainActivity" android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>