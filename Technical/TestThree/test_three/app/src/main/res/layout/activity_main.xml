<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_foreground" />

    <CheckBox
        android:id="@+id/check_box_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_one"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/text_view_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_one"
        android:layout_toEndOf="@+id/check_box_one"
        android:text="Item one"
        android:textSize="20sp"/>


    <ImageView
        android:id="@+id/img_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_box_one"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_foreground" />

    <CheckBox
        android:id="@+id/check_box_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_two"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/text_view_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_two"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/check_box_two"
        android:text="Item two"
        android:textSize="20sp"/>


    <ImageView
        android:id="@+id/img_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_box_two"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_foreground" />

    <CheckBox
        android:id="@+id/check_box_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_three"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/text_view_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_three"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/check_box_three"
        android:text="Item three"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_foreground" />

    <CheckBox
        android:id="@+id/check_box_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_four"
        android:layout_toStartOf="@+id/text_view_four"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/text_view_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true"
        android:text="Item four"
        android:layout_below="@+id/img_four"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_box_four"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="8dp"/>

    <CheckBox
        android:id="@+id/check_box_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_five"
        android:layout_toStartOf="@+id/text_view_five"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/text_view_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Item five"
        android:layout_below="@id/img_five"
        android:layout_alignParentEnd="true"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/img_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/check_box_five"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_foreground" />

    <CheckBox
        android:id="@+id/check_box_six"
        android:layout_below="@id/img_six"
        android:layout_toStartOf="@+id/text_view_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/text_view_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Item six"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/img_six"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text_view_three">

        <Button
            android:id="@+id/complete_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Button" />
    </LinearLayout>

</RelativeLayout>